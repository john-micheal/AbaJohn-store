@model AbaJohn.ViewModel.categoeryViewModel

@{
    Layout = "_adminLayout";
}

<h1>Add_categoery</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add_categoery" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="type" class="control-label"></label>
                <input asp-for="type" class="form-control" />
                <span asp-validation-for="type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to Home List</a>
    <a asp-action="Show_all_category" asp-controller="AdminServics" class="btn btn-success">Back to Category List</a>
    <a asp-action="Add_product" asp-controller="AdminServics" class="btn btn-success" >Add new Product</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}