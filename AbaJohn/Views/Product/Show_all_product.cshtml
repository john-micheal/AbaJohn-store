@model List<Product>
@{
    var counter = Model.Count();
    var i = 1;
    if (User.IsInRole("seller") || User.IsInRole("admin"))
    {

        Layout = "_businessAccLayout";
    }
}



<div class="container">

    <div class="text-center">
        <h2 style="color: red"> @ViewBag.massege </h2>
     </div>
    <div class="row" style="margin:30px; padding:10px">
       
        <table class="table table-bordered" style="text-align:center">

            <tr>
                <th>
                    #
                </th>
                <th>
                    Name
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Price
                </th>
                <th>
                    Code
                </th>
                <th>
                    Category Name
                </th>
                <th>
                   Product Image 
                </th>
                <th colspan="3">
                    Actions
                </th>
               
            </tr>
            
            @foreach (var item in Model)
            {
                <tr>

                    <td>@i</td>
                    @{
                        i++;
                    }

                    <td>@item.Name</td>
                    <td>@item.prodeuctGender</td>
                    <td>@item.price</td>
                    <td>@item.Code</td>
                    <td>@item.category.Name</td>
                    <td> <img src="../files/productimg/@item.images.BaseImg" style="width:50px; height:80px" /> </td>
                    <td>
                        <a class="btn btn-dark" style="color:white; border: 1px solid red; background-color: #000000;    width: 100px; " asp-action="AddItemToProduct" asp-controller="Item" asp-route-product_id="@item.ID"> Items</a>

                    </td>

                    <td>
                        <a class="btn btn-dark" style="color:white; border: 1px solid red; background-color: #000000; " asp-action="Edit_product" asp-controller="Product" asp-route-id="@item.ID">Edit</a>

                    </td>

                    <td>
                        <a class="btn btn-dark" style="color:white; border: 1px solid red; background-color: #000000" asp-action="Delete_product" asp-controller="Product" asp-route-id="@item.ID" onclick="ConfirmDelete(event)">Delete</a>

                    </td>
                   
                </tr>

            }
        </table>
        <a class="btn btn-dark" style="color:white; border: 1px solid red;  background-color: #000000" asp-action="Add_product" asp-controller="Product">Add new Product</a>

        @if (User.IsInRole("admin"))
        {
            <a class="btn btn-dark" style="color:white; border: 1px solid red;  background-color: #000000" asp-action="Add_categoery" asp-controller="Category">Add new Categoery</a>
        }
    </div>



</div>









<script>
    function ConfirmDelete() {
        document.getElementById("")
        var accept = confirm("Are You Sure?");
        if (accept == false) {
            event.preventDefault();
        }
    }
</script>