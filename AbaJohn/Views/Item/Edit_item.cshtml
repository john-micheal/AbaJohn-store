@model AbaJohn.ViewModel.ItemViewModel

@{
    Layout = "_businessAccLayout";
    var colorValue = Model.Colors?.First(x => x.Name == Model.Color).Value;
    var SizeValue = Model.Sizes?.First(x => x.Name == Model.size).Value;
}


<fieldset style="border: 1px solid #000000; padding: 20px; border-radius: 10px;  margin: 65px">
    <legend style=" color:#000000; padding: 5px 6px; margin:4px 52px; width: 12%;" class="align-content-center">  Edit Item </legend>



    <div class="continer">


        <form asp-action="Edit_item">
            <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="ID" value="@Model.ID"/>
                <input type="hidden" asp-for="productID" value="@Model.productID"/>
            <div class="form-row">
                <div class="form-group col-md-6">
                   
                    <label asp-for="Color" class="control-label"></label>
                    <select style="color:black" asp-for="Color" name="Color" class="form-control " required>
                        

                            <option value="@Model.Color" class="fa " style="color: @colorValue  ;">&#xf111; @Model.Color</option>
                        @foreach (var item in Model.Colors)
                        {
                            <option value="@item.Name" class="fa " style="color: @item.Value ;">&#xf111; @item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="size" class="control-label"></label>
                    <select style="color:black" asp-for="size" name="size" class="form-control " required>


                        <option value="@Model.size" class="fa " style="color: @SizeValue;">&#xf111; @Model.size</option>
                        @foreach (var item in Model.Sizes)
                        {
                            <option value="@item.Name" class="fa " style="color: @item.Value ;">&#xf111; @item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="size" class="text-danger"></span>
                </div>
            </div>




            <div class="form-row">
                <div class="form-group col-md-6">
                    <label style="color:black" asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2 text-center" style="margin-top:32px">
                    <div class="form-group" style="display: inline-block;">
                        <input class="btn btn-dark" style="color:white; border: 1px solid red;  background-color: #000000" type="submit" value="Update" />
                    </div>
                </div>
                <div class="form-group col-md-4" style="margin-top:32px">

                    <div style="display: inline-block; float:right">
                        <a class="btn btn-dark" style="color:white; border: 1px solid red;  background-color: #000000" asp-action="ShowItemsForProdcut" asp-route-ProductID="@Model.productID" class="btn btn-primary"> Back To Item List </a>
                    </div>
                </div>

            </div>


           
              
                 

        </form>
    </div>
    
</fieldset>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}