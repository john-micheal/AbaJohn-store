@model AbaJohn.ViewModel.loginViewModel

@{
    ViewData["Title"] = "login";
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--=============== REMIXICONS ===============-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" crossorigin="">

    <!--=============== CSS ===============-->
    <link rel="stylesheet" href="~/assets/css/styles.css">

    <title>Login</title>
</head>
<body>
    <div class="login">
        <img src="~/assets/img/login-bg.png" alt="image" class="login__bg">

        <form asp-action="login" class="login__form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h1 class="login__title">Login</h1>

            <div class="login__inputs">
                <div class="login__box">
                    <input asp-for="UserName" placeholder="User Name" required class="login__input" /> 
                    <i class="ri-mail-fill"></i>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="login__box">
                    <input asp-for="password" placeholder="Password" required class="login__input" />
                    <i class="ri-lock-2-fill"></i>
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
            </div>

            <div class="login__check">
                <div class="login__check-box">
                   
                    <input class="login__check-input" id="user-check" asp-for="rememberme" /> @Html.DisplayNameFor(model => model.rememberme)
              
                </div>

                <a href="#" class="login__forgot">Forgot Password?</a>
            </div>

            <button type="submit" asp-action="login" asp-controller="account" class="login__button">Login</button>

            <div class="login__register">
                Don't have an account? <a asp-action="registration" asp-controller="account">Register</a>
            </div>
        </form>
    </div>
</body>
</html>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
